@model Hassann_Khala.Domain.Client

@{
    ViewData["Title"] = "تعديل عميل";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-3">
    <div class="card p-3">
        <h4 class="mb-3">تعديل بيانات العميل</h4>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">الاسم</label>
                <input class="form-control" asp-for="Name" />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Name)</span>
            </div>

            <div class="mb-3">
                <label class="form-label">العنوان</label>
                <input class="form-control" asp-for="Address" />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Address)</span>
            </div>

            <div class="mb-3">
                <label class="form-label">الهاتف</label>
                <input class="form-control" asp-for="PhoneNumber" />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.PhoneNumber)</span>
            </div>

            <div class="mb-3">
                <label class="form-label">أنواع المنتجات المسموح بها</label>
                <div class="d-flex gap-2 flex-wrap">
                    @foreach (var val in Enum.GetValues(typeof(Hassann_Khala.Domain.ProductType)).Cast<Hassann_Khala.Domain.ProductType>())
                    {
                        var bit = (int)val;
                        var checkedAttr = ((Model.AllowedProductTypes & bit) == bit) ? "checked" : "";
                        var id = "ptype_" + bit.ToString();
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="AllowedProductTypes" value="@bit" id="@id" @checkedAttr />
                            <label class="form-check-label" for="@id">@val</label>
                        </div>
                    }
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">حفظ التغييرات</button>
                <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
            </div>
        </form>
    </div>
</div>
