@model MVC.ViewModels.Inbound.InboundDetailsVM
@{
    ViewData["Title"] = "تفاصيل المشتريات";
}

<style>
    body {
        background: linear-gradient(135deg,#eef2f7,#e3e9f3);
    }

    .glass-card {
        backdrop-filter: blur(14px);
        background: rgba(255,255,255,.75);
        border-radius: 18px;
        border: 1px solid rgba(255,255,255,.3);
        box-shadow: 0 8px 32px rgba(0,0,0,.07);
        transition: .3s;
    }

        .glass-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 30px rgba(0,0,0,.1);
        }

    .table thead {
        background: #f8f9fc;
    }

    .dark-mode {
        background: #0f172a !important;
        color: #f1f5f9 !important;
    }

        .dark-mode .glass-card {
            background: rgba(30,41,59,.7);
            border: 1px solid rgba(255,255,255,.08);
        }

        .dark-mode .table {
            color: #f1f5f9;
        }

            .dark-mode .table thead {
                background: #1e293b;
            }

        .dark-mode .text-muted {
            color: #cbd5e1 !important;
        }

    .fade-in {
        animation: fadeIn .6s ease-in-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .toggle-dark {
        cursor: pointer;
    }
</style>

<div class="container mt-4 fade-in">
    <div class="glass-card p-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="fw-bold">اذن #@Model.Id</h4>
            <button class="btn btn-outline-dark toggle-dark d-none d-md-inline">
                <i class="bi bi-moon"></i>
            </button>
        </div>

        <div class="mb-3 text-muted">
            <div><strong>العميل:</strong> @Model.ClientName</div>
            <div><strong>تاريخ الانشاء:</strong> @Model.CreatedAt.ToLocalTime().ToString("g")</div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>المنتج</th>
                        <th>مخزن</th>
                        <th class="text-end">عدد الكرتون</th>
                        <th class="text-end">عدد البالتات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model.Details)
                    {
                        <tr>
                            <td>@(string.IsNullOrWhiteSpace(d.ProductName) ? d.ProductId.ToString() : d.ProductName)</td>
                            <td>@(string.IsNullOrWhiteSpace(d.SectionName) ? d.SectionId.ToString() : d.SectionName)</td>
                            <td class="text-end">@d.Cartons</td>
                            <td class="text-end">@d.Pallets</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="2">الاجمالي</th>
                        <th class="text-end">@Model.TotalCartons</th>
                        <th class="text-end">@Model.TotalPallets</th>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="mt-3">
            <button id="preparePrint" class="btn btn-outline-secondary">تهيئة للطباعة</button>
            <a class="btn btn-secondary ms-2" asp-action="Index">عودة</a>
        </div>
    </div>
</div>

<script>
    // Dark Mode Toggle
    document.querySelectorAll('.toggle-dark').forEach(btn => {
        btn.addEventListener('click', function () {
            document.body.classList.toggle('dark-mode');
        });
    });

    // Prepare printable page and open print dialog
    document.getElementById('preparePrint').addEventListener('click', function () {
        const title = document.querySelector('.fw-bold')?.innerText || 'اذن مشتريات';
        const info = document.querySelector('.mb-3.text-muted')?.innerText || '';
        const table = document.querySelector('.table-responsive > table');
        const tableHtml = table ? table.outerHTML : '';

        // build HTML using \u003C to avoid Razor parsing of tags
        let html = '';
        html += '\u003C!doctype html>\n';
        html += '\u003Chtml>\n';
        html += '\u003Chead>\n' +
                '\u003Cmeta charset="utf-8">\n' +
                '\u003Ctitle>' + title + '<\u002Ftitle>\n' +
                '\u003Clink href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">\n' +
                '\u003Cstyle>body{direction:rtl; font-family: sans-serif; padding:20px;} .table td, .table th{border:1px solid #dee2e6;} .text-end{ text-align: right; }\u003C\/style>\n' +
                '\u003C\/head>\n';
        html += '\u003Cbody>\n';
        html += '\u003Cdiv class="container">\n    \u003Ch4>' + title + '\u003C\/h4>\n    \u003Cdiv>' + info.replace(/\n/g, '<br/>') + '</div>\n    \u003Cdiv class="table-responsive mt-2">' + tableHtml + '\u003C\/div>\n\u003C\/div>\n';
        html += '\u003Cscript>window.onload = function(){ setTimeout(function(){ window.print(); }, 200); }\u003C\/script>\n';
        html += '\u003C\/body>\n';
        html += '\u003C\/html>';

        const w = window.open('', '_blank');
        if (!w) { alert('منع النوافذ المنبثقة. اسمح بالمنبثقات لطباعة الإذن.'); return; }
        w.document.open();
        w.document.write(html);
        w.document.close();
    });
</script>
