@model IEnumerable<Domain.Delegate>
@{
    ViewData["Title"] = "Delegates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h5 mb-0">المفوضين</h2>
        <div>
            <a class="btn btn-primary" asp-action="Create">اضافة مفوض</a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card p-3">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>الاسم</th>
                            <th>العميل</th>
                            <th>التاريخ</th>
                            <th>اجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in Model)
                        {
                            <tr>
                                <td>@d.Name</td>
                                <td>@d.Client?.Name</td>
                                <td>@d.CreatedAt.ToLocalTime().ToString("g")</td>
                                <td>
                                    <form asp-action="Delete" method="post" asp-route-id="@d.Id" onsubmit="return confirm('هل تريد حذف هذا المفوض؟');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger">حذف</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-muted">لا توجد مفوضين.</div>
        }
    </div>
</div>