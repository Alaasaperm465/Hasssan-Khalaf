@model MVC.ViewModels.Products.ProductIndexVM
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">المنتجات</h1>
        <a class="btn btn-primary" asp-action="Create">اضافة منتج</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form method="get" class="mb-3 d-flex gap-2 align-items-center">
        <input type="search" name="search" value="@Model.Search" class="form-control" placeholder="ابحث عن منتج..." />
        <button class="btn btn-outline-primary" type="submit">بحث</button>
        <div class="ms-auto text-muted small">العناصر: <strong>@Model.TotalCount</strong></div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>الاسم</th>
                    <th>السعر</th>
                    <th>الوصف</th>
                    <th>الصورة</th>
                    <th>الاجراءات</th>
                </tr>
            </thead>
            <tbody>
            @foreach(var p in Model.Products) {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Price.ToString("C")</td>
                    <td>@(p.Description ?? "-")</td>
                    <td>
                        @if(!string.IsNullOrWhiteSpace(p.ImageUrl))
                        {
                            <img src="@p.ImageUrl" alt="@p.Name" style="height:48px; width:auto;" />
                        }
                        else
                        {
                            <span class="text-muted">لا توجد</span>
                        }
                    </td>
                    <td>
                        <div class="d-flex gap-2">
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@p.Id">تعديل</a>
                            <form asp-action="Delete" method="post" asp-route-id="@p.Id" onsubmit="return confirm('هل أنت متأكد من حذف هذا المنتج؟');">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-outline-danger" type="submit">حذف</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-search="@Model.Search" asp-route-page="@(Model.Page-1)" asp-route-pageSize="@Model.PageSize">السابق</a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.Page ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-search="@Model.Search" asp-route-page="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                    </li>
                }
                <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-search="@Model.Search" asp-route-page="@(Model.Page+1)" asp-route-pageSize="@Model.PageSize">التالي</a>
                </li>
            </ul>
        </nav>
    }
</div>