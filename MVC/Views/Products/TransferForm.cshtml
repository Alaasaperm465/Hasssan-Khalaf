@model Hassann_Khala.Application.DTOs.Product.ProductTransferDto
@{
    ViewData["Title"] = "Product Transfer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-3">
    <h3>نقل منتجات بين أقسام</h3>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form asp-action="ProductTransfer" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

        <div class="row g-2">
            <div class="col-md-4">
                <label class="form-label">العميل</label>
                <select asp-for="ClientId" class="form-select" asp-items="@(IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.Clients">
                    <option value="">-- اختر العميل --</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">المنتج</label>
                <select asp-for="ProductId" class="form-select" asp-items="@(IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.Products">
                    <option value="">-- اختر المنتج --</option>
                </select>
            </div>
            <div class="col-md-4"></div>

            <div class="col-md-6 mt-2">
                <label class="form-label">من قسم</label>
                <select asp-for="FromSectionId" class="form-select" asp-items="@(IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.Sections">
                    <option value="">-- اختر القسم --</option>
                </select>
            </div>
            <div class="col-md-6 mt-2">
                <label class="form-label">إلى قسم</label>
                <select asp-for="ToSectionId" class="form-select" asp-items="@(IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.Sections">
                    <option value="">-- اختر القسم --</option>
                </select>
            </div>

            <div class="col-md-3 mt-2">
                <label class="form-label">الكرتون</label>
                <input asp-for="Cartons" type="number" class="form-control" min="0" />
            </div>
            <div class="col-md-3 mt-2">
                <label class="form-label">البالتات</label>
                <input asp-for="Pallets" type="number" class="form-control" min="0" />
            </div>

            <div class="col-12 mt-3">
                <button class="btn btn-primary">تنفيذ النقل</button>
                <a class="btn btn-secondary" asp-action="Index" asp-controller="Stock">الغاء</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
