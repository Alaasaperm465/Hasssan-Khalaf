@model Hassann_Khala.Domain.Product

@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-3">
    <div class="card p-3">
        <h4>Edit Product</h4>
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Type</label>
                <select asp-for="Type" class="form-select" asp-items="@(Html.GetEnumSelectList(typeof(Hassann_Khala.Domain.ProductType)))">
                    <option value="">-- ???? ????? --</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Current Image</label>
                <div>
                    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Name" style="max-height:120px; max-width:240px;" />
                    }
                    else
                    {
                        <div class="text-muted">No image</div>
                    }
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Upload New Image (optional)</label>
                <input type="file" name="imageFile" accept="image/*" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Image URL (optional)</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="IsActive" class="form-check-input" />
                <label class="form-check-label">Active</label>
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
