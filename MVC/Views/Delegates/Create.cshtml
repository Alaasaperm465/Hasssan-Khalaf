@model Hassann_Khala.Domain.Delegate
@{
    ViewData["Title"] = "Add Delegate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-3">
    <div class="card p-3">
        <h4>إضافة مفوض جديد</h4>
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label">الاسم</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">العميل</label>
                <select asp-for="ClientId" class="form-select" asp-items="ViewBag.Clients">
                    <option value="">-- اختر العميل --</option>
                </select>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-primary">حفظ</button>
                <a asp-action="Index" asp-controller="Clients" class="btn btn-secondary">الغاء</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}